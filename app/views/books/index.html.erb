<div class="container">
  <div class="mt-5">
    <%= form_tag books_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a booke"
      %>
      <%= submit_tag "Search", class: "btn btn-primary w-100 mt-3" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="mt-5 mb-5">
    <% @books.each do |book| %>
      <h3><%= book.title %></h3>
      <p><%= book.author %></p>
    <% end %>
  </div>
</div>
